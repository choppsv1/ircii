#	$eterna: dmsg,v 1.2 2001/08/12 15:57:10 mrg Exp $
#
alias dmsg.fixup {
  @ dmsg.tmp = index(, $0) + 1
  if (dmsg.tmp > 0) {
    @ function_return = mid(0 $dmsg.tmp $0) ## [=] ## dmsg.fixup($mid($dmsg.tmp -1 $0))
  } {
    @ function_return = [$0]
  }
  ^assign -dmsg.tmp
}

alias dmsg {
  @ dmsg.r = max_recursions
  ^set max_recursions 20
  msg =$dmsg.fixup($0) $1-
  ^set max_recursions $dmsg.r
  ^assign -dmsg.r
}
