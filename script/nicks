#	$eterna: nicks,v 1.2 2001/08/12 15:57:11 mrg Exp $
#
# This lets you assign aliases for peoples nicknames.
# For example, of you do: /ASSIGN BC BigCheese
# Then you can do: /MSG BC Hi there!

alias msg {
	if ( [$($0)] )
	{
		${K}${K}msg $($0) $1-
	}
	{
		${K}${K}msg $0 $1-
	}
}
alias query {
	if ( [$($0)] )
	{
		${K}${K}query $($0)
	}
	{
		${K}${K}query $0-
	}
}
